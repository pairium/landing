{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "types": ["bun-types"],
    "paths": {
      "@/*": ["./src/*"],
      "next-themes": ["./src/stubs/next-themes"],
      "@radix-ui/react-dropdown-menu": ["./src/stubs/radix-dropdown-menu"]
    }
  },
  "include": ["src", "scripts"],
  "exclude": ["node_modules", "build"]
}
