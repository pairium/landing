{
  "name": "pairium-landing",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "dev": "bun --hot src/index.html",
    "build": "rm -rf build && bun build src/index.html --outdir build --minify --target browser --define.process.env.NODE_ENV=production",
    "serve": "bun run --production build/index.html",
    "deploy": "bun run build && firebase deploy --only hosting",
    "check": "tsc --noEmit"
  },
  "dependencies": {
    "@icons-pack/react-simple-icons": "^13.8.0",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-use-controllable-state": "^1.2.2",
    "@tanstack/react-router": "^1.79.3",
    "@tanstack/router-devtools": "^1.79.3",
    "class-variance-authority": "^0.7.1",
    "lucide-react": "^0.553.0",
    "motion": "^12.23.24",
    "next-themes": "^0.4.6",
    "radix-ui": "^1.4.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "shiki": "^3.15.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
